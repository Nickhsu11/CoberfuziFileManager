<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CoberfuziFileManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        d:DesignWidth="400" 
        d:DesignHeight="550"
        x:Class="CoberfuziFileManager.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CoberfuziFileManager"
        CanResize="True">
    
    <StackPanel Margin="10">
        <TextBlock Text="Item Name:" FontSize="16"/>
        <TextBox Text="{Binding NewItemName}" FontSize="14" Margin="0 0 0 10"/>
        
        <Button Content="Add Item" Command="{Binding AddItemCommand}" FontSize="14" Margin="0 0 0 20"/>
        
        <TextBlock Text="Items List:" FontSize="16"/>
        <ListBox ItemsSource="{Binding Items}" FontSize="14">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
    
</Window>
